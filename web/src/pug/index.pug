doctype html
html(lang='en')
	head
		meta(charset='UTF-8')
		title Mongo Admin
		link(rel='stylesheet', href='css/style.css')
	body
		section#ui
			section#left-pane
				h1 mongoAdmin
				hr
				select#db-select
					option(value='') Select Database
				hr
				h2 collections
				hr
				ul#collections
				hr
			section#content
				table#meta
					tr
						td Db:
						td#db-name
					tr
						td Collection:
						td#collection-name
				table#results
		//- load the app
		script(src='js/app.js')
